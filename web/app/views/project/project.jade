div.project.relative.h100p
  .track-list
    .scroll-container.relative
      .project-grid.scroll-content
        .grid-row.relative.track-headers
          .grid-cell.center(ng-repeat='(index, track) in project.tracks')
            div(k-track-header='', track='track')

        .grid-row(ng-repeat='set in project.sets')
            .grid-cell(ng-repeat='track in mixer.tracks')
              div.h100p(k-play-clip='', clip='track.getClip(set.id)')
        //.track-mixer-spacer
        .project-sets.absolute
          .grid-row.spacer
          .grid-row(ng-repeat='set in project.sets')
           .grid-cell.set-label
              div.h100p(k-set='', set='set')

        .track-mixer.grid-row
          .grid-cell.center.relative(ng-repeat='track in mixer.tracks')
            div(k-track-controls='', track='track')
            div.center(k-fader='', track='track', node='track.nodes.volume')
            div.vu-meter(k-vu-meter='', node='track.nodes.gain')
            strong {{ track.name }}


  .corner-controls.grid-row
    .grid-cell
       button.btn.btn-primary(ng-click='addTrack()', type='button') [+] Add Track

  .master-mixer.grid-row
    .grid-cell.center
      div.center(k-fader='', gain-node='mixer.nodes.masterGain')
      strong Master

